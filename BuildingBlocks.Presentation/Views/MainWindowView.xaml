<UserControl x:Class="BuildingBlocks.Presentation.Views.MainWindowView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BuildingBlocks.Presentation.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="LightBlue" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Margin" Value="4" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Width" Value="80" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" MaxHeight="400">
            <Expander Header="Select Data" IsExpanded="{Binding IsExpanded}" >
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                            <Button Content="Load File" x:Name="LoadFile" Style="{StaticResource ButtonStyle}" Command="{Binding LoadFile}" IsEnabled="{Binding IsLoadFileEnabled}" />
                        <Label Width="20" Height="30" Margin="60,0,0,0" Content="K:" />
                        <TextBox x:Name="K" Width="80" Height="30" IsEnabled="{Binding IsKEnabled}" />
                        <Label Width="80" Height="30" Margin="0,0,0,0" Content="Board Width:" />
                        <TextBox x:Name="BoardWidth" Width="80" Height="30" IsEnabled="False"/>
                    </StackPanel>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="350">
                        <StackPanel>
                        <local:BlocksBrowserView DataContext="{Binding BlocksBrowserViewViewModel}" />
                    </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </Expander>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal"> 
            <Label Width="40" Height="30" Margin="40,0,0,0" Content="Step:" />
            <TextBox x:Name="Step" Width="80" Height="30" IsEnabled="{Binding IsStepEnabled}" />
            <Button x:Name="Start" Content="Start" Style="{StaticResource ButtonStyle}" IsEnabled="{Binding IsStartEnabled}" />
            <Button x:Name="Pause" Content="Pause" Style="{StaticResource ButtonStyle}" IsEnabled="{Binding IsPauseEnabled}" />
            <Button x:Name="Stop" Content="Stop" Style="{StaticResource ButtonStyle}" IsEnabled="{Binding IsStopEnabled}" />
            <Button x:Name="Next" Content="Next" Style="{StaticResource ButtonStyle}" IsEnabled="{Binding IsNextEnabled}" />
        </StackPanel>
        <ScrollViewer Grid.Row="2" Grid.Column="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <local:AlgorithmSimulationView DataContext="{Binding AlgorithmSimulationViewViewModel}" />
        </ScrollViewer>
    </Grid>
</UserControl>
